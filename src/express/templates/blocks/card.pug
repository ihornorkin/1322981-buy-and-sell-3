mixin card(offer)
  li.tickets-list__item
    .ticket-card.ticket-card--color06
      .ticket-card__img
        img(src=`/img/${offer.picture}` alt="Изображение товара")
      .ticket-card__info
        span.ticket-card__label #{offer.type === 'sale' ? 'Продам' : 'Куплю'}
        .ticket-card__categories
          a(href="#") #{offer.categories}
        .ticket-card__header
          h3.ticket-card__title
            a(href="#") #{offer.title}
          p.ticket-card__price
            span.js-sum #{offer.sum} ₽</p>
        .ticket-card__desc
          p #{offer.description}
